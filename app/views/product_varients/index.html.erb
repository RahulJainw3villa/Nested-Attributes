<p id="notice"><%= notice %></p>

<h1>Product Varients</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Size</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_varients.each do |product_varient| %>
      <tr>
        <td><%= product_varient.color %></td>
        <td><%= product_varient.size %></td>
        <td><%= product_varient.product_id %></td>
        <td><%= link_to 'Show', product_varient %></td>
        <td><%= link_to 'Edit', edit_product_varient_path(product_varient) %></td>
        <td><%= link_to 'Destroy', product_varient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

